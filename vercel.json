{
  "version": 2,
  "builds": [
    {
      "src": "api/index.php",
      "use": "@vercel/php"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/api/index.php"
    }
  ],
  "installCommand": "composer install --no-dev --prefer-dist --no-interaction",
  "buildCommand": "php artisan optimize:clear || true"
}

